<h1>Books</h1>

  <table>
  	<thead>
  		<tr>
  			<th>Title</th>
  			<th>Body</th>
  			<th></th>
  		</tr>
  	</thead>
  	<tbody>
	<% @books.each do |book| %>
  		<tr>
  			<td><%= book.title %></td>
  			<td><%= book.body %></td>
  			<td>
  				<%= link_to "show", book_path(book.id) %>
  				<%= link_to "edit", edit_book_path(book.id) %>
  				<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
			</td>
  		</tr>
	<% end %>
  	</tbody>
  </table>


<h1>New book</h1>
<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_field :body %>
  <br>
  <%= f.submit 'Create Book' %>

<% end %>
